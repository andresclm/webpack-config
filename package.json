{
  "name": "webpack-config",
  "version": "1.0.0",
  "description": "Skeleton of a webpack initial configuration, with best practices in mind.",
  "main": "index.js",
  "scripts": {
    "prestart": "tailwind build ./src/styles/index.css -o ./src/styles/tailwind.css",
    "start": "webpack-dashboard -- webpack-dev-server --env.mode development --env.presets dashboard",
    "lint": "tsc && prettier -c . && eslint . --ext .js,.ts,.tsx -f codeframe",
    "build:dev": "npm run prestart && webpack --env.mode development",
    "build:prod": "export NODE_ENV=production && npm run prestart && webpack --env.mode production",
    "build:prod:compress": "npm run build:prod -- --env.presets compress",
    "build:prod:analyze": "npm run build:prod -- --env.presets analyze"
  },
  "keywords": [],
  "author": "Andres Lemus",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "@typescript-eslint/eslint-plugin": "4.1.0",
    "@typescript-eslint/parser": "4.1.0",
    "clean-webpack-plugin": "3.0.0",
    "compression-webpack-plugin": "5.0.2",
    "css-loader": "4.3.0",
    "eslint": "7.9.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-react": "7.20.6",
    "eslint-plugin-react-hooks": "4.1.2",
    "html-webpack-plugin": "4.4.1",
    "mini-css-extract-plugin": "0.11.2",
    "optimize-css-assets-webpack-plugin": "5.0.4",
    "prettier": "2.1.1",
    "style-loader": "1.2.1",
    "tailwindcss": "1.8.8",
    "terser-webpack-plugin": "4.2.0",
    "ts-loader": "8.0.3",
    "typescript": "4.0.2",
    "webpack": "4.44.1",
    "webpack-bundle-analyzer": "3.8.0",
    "webpack-cli": "3.3.12",
    "webpack-dashboard": "3.2.1",
    "webpack-dev-server": "3.11.0",
    "webpack-merge": "5.1.4"
  },
  "dependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1"
  }
}
